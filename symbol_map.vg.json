{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 500,
  "title": "Natural Disasters Australia",
  "projection": {"type": "mercator"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/TheAnimalOne/FIT3179/main/ne_110m%20(2).topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "black"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/TheAnimalOne/FIT3179/main/ausenvironmentaldisasterdata.csv"
      },
      "transform": [
        {"calculate": "datum.Disasterlength + 0.1", "as": "Length"}
      ],
      "selection": {
        "disaster_highlight": {
          "type": "multi",
          "fields": ["title"],
          "bind": "legend"
        }
      },
      "mark": {"type": "circle", "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "size": {
          "field": "Deaths",
          "type": "quantitative",
          "scale": {"rangeMax": 1500}
        },
        "color": {
          "field": "title",
          "type": "nominal",
          "title": "Disaster Type"
        },
        "opacity": {
          "condition": {"selection": "disaster_highlight", "value": 0.6},
          "value": 0.2
        },
        "tooltip": [
          {"field": "title", "type": "nominal"},
          {
            "field": "Disasterlength",
            "type": "quantitative",
            "title": "Disaster Length in days"
          },
          {"field": "Deaths", "type": "quantitative"},
          {"field": "Injuries", "type": "quantitative"}
        ]
      }
    }
  ]
}
