{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 350,
  "data": {
    "url": "https://raw.githubusercontent.com/TheAnimalOne/FIT3179/main/ausenvironmentaldisasterdata.csv"
  },
  "mark": "circle",
  "selection": {
    "disaster_highlight": {
      "type": "multi",
      "fields": ["title"],
      "bind": "legend"
    }},
    "encoding": {
      "y": {
        "field": "startDate",
        "type": "ordinal",
        "timeUnit": "month",
        "title": ""
      },
      "x": {
        "field": "startDate",
        "type": "ordinal",
        "timeUnit": "year",
        "title": ""
      },
      "size": {"field": "count", "type": "quantitative", "aggregate": "sum"},
      "color": {"field": "title", "title": "Disaster Type", "legend": {"orient": "left"}},
      "opacity": {
        "condition": {"selection": "disaster_highlight", "value": 0.8},
        "value": 0.2
      }
    }
  }
