{ 
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Disaster Length",
  "height": 350,
  "data": {
    "url": "https://raw.githubusercontent.com/TheAnimalOne/FIT3179/main/ausenvironmentaldisasterdata.csv"
  },
  "params": [
    {
      "name": "title_selection",
      "bind": {
        "input": "select",
        "options": [
          "null",
          "Bushfire",
          "Cyclone",
          "Drought/Heatwave",
          "Flood",
          "Severe Storm"
        ],
        "labels": [
          "All",
          "Bushfire",
          "Cyclone",
          "Drought/Heatwave",
          "Flood",
          "Severe Storm"
        ],
        "name": "Disaster Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.title == title_selection"}
  ],
  "layer": [
    {
      "mark": {"type": "boxplot", "median": {"color": "red"}, "ticks": true},
      "encoding": {
        "x": {"field": "title", "type": "nominal", "title":""},
        "y": {
          "field": "Disasterlength",
          "type": "quantitative",
          "title": "Disaster Length (in days)",
          "scale": {"type": "linear"}
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": 100,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"aggregate": "median","field": "Disasterlength", "type": "quantitative"},
        "color": {"value": "black"}
      }
    },
    {
      "transform": [

        {
          "calculate": "'The median value is'",
          "as": "text_raw"
        }
      ],
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": 150,
        "dy": -15,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {"text": {"field": "text_raw"}}
    }
  ]
}
